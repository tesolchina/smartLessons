{
  "default_folder": "Presentations",
  
  "course_folders": {
    "GCAP3226": "GCAP 3226 - Empowering Citizens through Data",
    "GCAP3056": "GCAP 3056 - Applied Statistics", 
    "LANG0036": "LANG 0036 - Academic English",
    "general": "General Presentations"
  },
  
  "folder_mappings": {
    "lectures": "Lectures",
    "workshops": "Workshops", 
    "assignments": "Assignments",
    "projects": "Student Projects",
    "resources": "Course Resources",
    "weekly": "Weekly Materials"
  },
  
  "auto_organization": {
    "enabled": true,
    "rules": {
      "week_pattern": "Week\\s*(\\d+)",
      "lecture_pattern": "(Lecture|Lesson)\\s*(\\d+)",
      "workshop_pattern": "(Workshop|Lab)\\s*(\\d+)",
      "assignment_pattern": "(Assignment|Project)\\s*(\\d+)"
    },
    "folder_structure": {
      "by_week": "{course}/Week {week_number}",
      "by_type": "{course}/{content_type}",
      "by_date": "{course}/{year}/{month}"
    }
  },
  
  "sharing_settings": {
    "default_visibility": "anyone_with_link",
    "default_role": "reader",
    "course_team_role": "editor",
    "student_role": "commenter"
  },
  
  "naming_conventions": {
    "lecture_format": "{course_code}_Week{week}_Lecture_{title}",
    "workshop_format": "{course_code}_Week{week}_Workshop_{title}",
    "assignment_format": "{course_code}_{type}_{number}_{title}",
    "general_format": "{title}_{date}"
  },
  
  "backup_settings": {
    "create_backup": true,
    "backup_folder": "Presentation Backups",
    "retention_days": 30,
    "version_naming": "{original_name}_backup_{timestamp}"
  }
}
